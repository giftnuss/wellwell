[formel type=password name=mv_verify value=""]
</p>

<p>
[button text="Create Account"]
[comment]Go to logged_in or back to this component if creation failed[/comment]

[if type=explicit compare="[userdb new_account]"]
[action targets="logged_in" type=bounce]
[else]
[action targets="create_account" type=bounce]
[/else]

[/if]
[/button]
</p>

</fieldset
