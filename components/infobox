[if session failure]
	<div class="errors">
	<strong>[data session failure]</strong>
	[data base=session field=failure value=""]
	</div>
[elsif errors]
	<div class="errors">
	<ul>
	<li>
	[error all=1 show_label=1 show_error=1 joiner="</li><li>"]
	</li>
	</ul>
	</div>
[/elsif]
[/if]

[if warnings]
	<div class="warnings">
	[warning auto=1]
	</div>
[/if]

